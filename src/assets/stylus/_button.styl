// 元件：按钮
// ------------------------------

.btn
  display: inline-block!important
  border: none
  border-radius .02rem
  outline none
  padding .05rem .1rem
  line-height .25rem
  text-align center
  //white-space: nowrap
  vertical-align: middle
  touch-action manipulation
  box-sizing border-box
  margin 0.05rem auto
  background-color #f6f6f6
  color #ffffff
  &.disabled
    background #c8c8c8
    color #fff

  &:active
    box-shadow inset 0 .02rem .03rem rgba(0, 0, 0, .3)

  &:visited
    color #ffffff

.btn-sm
  font-size .13rem
  padding 0 .1rem
  line-height .22rem

.btn-block
  display block
  width 90%
  margin .15rem 5%
  border-radius .18rem

.btn-primary
  background #6283f4

  &.active
    background darken(@background, 8%)

.btn-success
  background #5dda66
.btn-error
  background red
.btn-info
  background #ffa315


