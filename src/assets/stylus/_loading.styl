// 元件：Loading
// ------------------------------

.loading-fixed{
  position: fixed;
  left: 50%;
  top: 50%;
  width .5rem
  margin: -.6rem 0 0 -.3rem;
  text-align: center;
  background: rgba(0,0,0,0.6);
  border-radius: 0.04rem;
  padding: .15rem;
  z-index: 999;
  color: #fff;
  p{
    margin-top .1rem;
    margin-bottom 0
  }
}

@keyframes blink {
  0%{
    opacity: 1;
  }
  50%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}

.icon-loading{
  position: relative;
  width: .2rem;
  height: .2rem;
  color: grey;
  left: 50%;
  margin-left: -.1rem;
  .dot{
    width: 0.02rem;
    height: .2rem;
    position: absolute;
    top:0;
    left: 50%;
    margin-left: -0.01rem;
  }
  .dot-t, .dot-b{
    position: absolute;
    left: 0;
    content: '';
    background: white;
    width: 0.02rem;
    height: 0.06rem;
    border-radius: 0.01rem;
    animation: blink 0.8s infinite ease-in-out;
    animation-fill-mode: both;
  }
  .dot-t{
    top: 0;
  }
  .dot-b{
    bottom: 0;
  }
  .dot1{
    .dot-t{
      animation-delay: -0.1s;
    }
    .dot-b{
      animation-delay: -0.5s;
    }
  }
  .dot2{
    transform: rotate(45deg);
    .dot-t{
      animation-delay: -0.2s;
    }
    .dot-b{
      animation-delay: -0.6s;
    }
  }
  .dot3{
    transform: rotate(90deg);
    .dot-t{
      animation-delay: -0.3s;
    }
    .dot-b{
      animation-delay: -0.7s;
    }
  }
  .dot4{
    transform: rotate(135deg);
    .dot-t{
      animation-delay: -0.4s;
    }
    .dot-b{
      animation-delay: -0.8s;
    }
  }
}


// 下拉loading
.loading-pull{
  text-align: center;
  border-radius: 0.04rem;
  padding: .15rem;
  z-index: 999;
  p{
    margin-top .1rem;
    margin-bottom 0
  }

  .icon-loading{
    .dot-t, .dot-b{
      background: #FD8F7B;
    }
  }
}
